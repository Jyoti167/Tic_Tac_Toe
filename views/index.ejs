<%- include("header") %>

    <div class="d-block container   mt-5 flex-wrap align-items-center justify-content-center">
        <h1 class="mt-3 text-center">Your Games</h1>
        <a href="/Start"><button class="btn btn-primary align-items-center justify-content-center w-40 mx-5 fs-4 text-light border border-1 align-centre p-2 mt-3 mb-3">Start a new game</button></a>
        <% if(tasks.length === 0){ %>
            <h3 class="m-auto fs-1 text-danger mt-5 text-center " style="font-family: 'Allura', cursive;font-weight:700;">No Games Found</h3>

            <% }%>
                <% tasks.forEach(function(t)   { %>
                    <div class="card container mt-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title text-center">Game with
                                <%= t.name%>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-success text-center ">
                                <%= t.desc %>
                            </h6>
                            <p class="card-text text-center">
                                <%= t.date %>
                            </p>
                            <a href="/view/<%= t._id %>"><button class="btn btn-warning w-100 fs-4 text-light border border-1 align-centre p-2 mt-3 mb-3">View</button></a>
                            <!-- <a href="#" class="card-link btn btn-warning text-decoration-none text-dark">Result</a>
                            <a href="#" class="card-link btn btn-warning text-decoration-none text-dark">Another link</a> -->
                        </div>
                    </div>
                    <% }) %>

    </div>
    <%- include("footer") %>